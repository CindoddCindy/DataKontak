<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.AddContact">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:textStyle="normal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15dp"
            android:padding="5dp"
            android:textColor="@color/FontColor"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Save Contact To Device">

        </TextView>

        <TextView

            android:textStyle="normal"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:padding="5dp"
            android:textColor="@color/FontColor"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="First Name">

        </TextView>

        <EditText

            android:id="@+id/et_add_storage_first_name"
            android:padding="5dp"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </EditText>
        <TextView
            android:layout_marginLeft="10dp"
            android:textStyle="normal"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:padding="5dp"
            android:textColor="@color/FontColor"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name">

        </TextView>
        <EditText
            android:padding="5dp"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/et_add_storage_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </EditText>
        <TextView
            android:textStyle="normal"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:padding="5dp"
            android:textColor="@color/FontColor"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Email">

        </TextView>

        <EditText
            android:padding="5dp"
            android:id="@+id/et_add_storage_email"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </EditText>
        <TextView
            android:layout_marginLeft="10dp"
            android:textStyle="normal"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:padding="5dp"
            android:textColor="@color/FontColor"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender">

        </TextView>
        <EditText
            android:padding="5dp"
            android:gravity="left"
            android:id="@+id/et_add_storage_gender"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </EditText>




        <TextView
            android:id="@+id/tv_add_storage_submit"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:padding="5dp"
            android:textColor="@color/FontColor"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save">

        </TextView>





    </LinearLayout>


</LinearLayout>